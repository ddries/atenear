{
    "manifest_version": 3,
    "name": "Atenear",
    "description": "Refresh Atenea session automatically",
    "version": "2.0",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [ "https://atenea.upc.edu/*" ],
            "js": [ "payload.js" ]
        }
    ],
    "icons": {
        "16": "/logos/upc16.png",
        "32": "/logos/upc32.png",
        "48": "/logos/upc48.png",
        "64": "/logos/upc64.png",
        "128": "/logos/upc128.png"
    },
    "permissions": [
        "scripting"
    ],

    "host_permissions": [
        "https://atenea.upc.edu/*"
    ]
}